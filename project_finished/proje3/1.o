10	INIT_WDT	.macro	
11			    mov.w   #WDTPW|WDTHOLD, &WDTCTL     ; Watchdog'u durdur
12		.endm

14	INIT_GPIO	.macro	
15			    bis.b   #01h, &P1DIR                 ; P1.0'ı output yap (LED)
16			    bic.b   #01h, &P1OUT                 ; LED'i söndür
17		.endm

19	DELAY_LOOP	.macro	cycles
20			    mov.w   #cycles, R15                 ; Delay counter'ı R15'e yükle
21			delay_loop:
22			    dec.w   R15                          ; Counter'ı azalt
23			    jnz     delay_loop                   ; Sıfır değilse devam et
24		.endm

26	TOGGLE_LED	.macro	
27			    xor.b   #01h, &P1OUT                 ; P1.0 LED'ini toggle et
28		.endm

30	SET_LED	.macro	state
31			    mov.b   #state, &P1OUT               ; LED state'ini ayarla
32		.endm

